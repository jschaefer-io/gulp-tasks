{
    "paths": {
        "watch": "src/**/*",
        "scss": {
            "files": [
                "src/app.scss"
            ],
            "includePaths": [],
            "dist": "dist/assets/css"
        },
        "js": {
            "files": [
                [
                    "src/app.js"
                ]
            ],
            "dist": "dist/assets/js"
        },
        "tasap": {
            "files": [
                "src/views/*.html"
            ],
            "dist": "dist"
        },
        "assets": {
            "files": [
                {
                    "from": "src/img/**/*",
                    "to": "img"
                },
                {
                    "from": "src/fonts/**/*",
                    "to": "font"
                }
            ],
            "dist": "dist/assets"
        }
    },
    "options": {
        "sync": {
            "rel": true,
            "value": "dist"
        },
        "styleguide": {
            "title": "Styleguide title",
            "files": [
                "src"
            ],
            "cssDist": "app.css",
            "homepage": "../README.md",
            "dist": "styleguide"
        },
        "abovefold": {
            "dist": "dist/assets/css/abovethefold",
            "replace": [
                [
                    "http://localhost:3000",
                    ""
                ]
            ],
            "link": "http://localhost:3000/",
            "chunksize": 10,
            "viewport": {
                "width": 1920,
                "height": 1080
            },
            "types": [
                "document",
                "stylesheet",
                "script"
            ],
            "timeout": 5000
        }
    }
}
